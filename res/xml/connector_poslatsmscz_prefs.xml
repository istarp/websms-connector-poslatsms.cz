<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/connector_poslatsmscz_preferences">
	<CheckBoxPreference android:key="enable_poslatsmscz"
		android:title="@string/connector_poslatsmscz_enable" />
	<EditTextPreference android:key="connector_user_poslatsmscz"
		android:title="@string/connector_poslatsmscz_username" android:dialogTitle="@string/connector_poslatsmscz_username"
		android:inputType="textEmailAddress" android:dependency="enable_poslatsmscz" />
